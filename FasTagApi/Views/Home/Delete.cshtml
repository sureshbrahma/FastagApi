@model FasTagApi.Models.VehicleRequest

@{
    ViewBag.Title = "Delete Vehicle Request";
}
<body style="background-color:honeydew">
    <h2 class="text-center">Delete Fastag Request</h2>

    <h3 class="text-center">Are you sure you want to delete this?</h3>
    <div class="container  text-center">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Sno)</th>
                            <td>@Html.DisplayFor(model => model.Sno)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.InstitutionName)</th>
                            <td>@Html.DisplayFor(model => model.InstitutionName)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
                            <td>@Html.DisplayFor(model => model.DepartmentName)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                            <td>@Html.DisplayFor(model => model.UserName)</td>
                        </tr>
                        <tr>
                            <th>WMN</th>
                            <td>@Html.DisplayFor(model => model.WhatsappMobileNumber)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.VehicleFullNumber)</th>
                            <td>@Html.DisplayFor(model => model.VehicleFullNumber)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.VehicleType)</th>
                            <td>@Html.DisplayFor(model => model.VehicleType)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TravellingFromTO)</th>
                            <td>@Html.DisplayFor(model => model.TravellingFromTO)</td>
                        </tr>
                        <tr>
                            <th>DIP</th>
                            <td>@Html.DisplayFor(model => model.DepartmentInChargePermission)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.RechargeAmount)</th>
                            <td>@Html.DisplayFor(model => model.RechargeAmount)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.DateOfRequest)</th>
                            <td>@Html.DisplayFor(model => model.DateOfRequest)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ReferenceNo)</th>
                            <td>@Html.DisplayFor(model => model.ReferenceNo)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <td>@Html.DisplayFor(model => model.Status)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Expiration)</th>
                            <td>@Html.DisplayFor(model => model.Expiration)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FastagAccount)</th>
                            <td>@Html.DisplayFor(model => model.FastagAccount)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Remarks)</th>
                            <td>@Html.DisplayFor(model => model.Remarks)</td>
                        </tr>
                    </tbody>
                </table>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions text-center mt-4">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                }
            </div>
        </div>
    </div>
</body>

<style>
    .container {
        margin-top: 20px;
    }

    .form-actions {
        margin-top: 20px;
    }

    table {
        margin-top: 20px;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
